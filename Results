  <!-- JS for Dashboard 2 only -->
  <script>
    (function() {
      const titles = [
        { name: 'No te comas el coco: 10 psicosoluciones para salir de las trampas de la mente', rating: 4.78 },
        { name: 'Terapia para llevar: 100 herramientas psicológicas para llevar mejor tu día a día', rating: 4.75 },
        { name: 'Homo Solver: Los 15 problemas que deberás resolver para que tu vida valga la pena', rating: 4.74 },
        { name: 'Sabia Mente: Sabiduría práctica para la vida moderna', rating: 4.72 },
        { name: 'El milagro antiestrés: Cómo enfrentar la mayor epidemia de este siglo', rating: 4.69 },
        { name: 'Los 7 pilares del amor propio: Cómo forjar una relación profunda y enriquecedora con uno mismo', rating: 4.66 },
        { name: 'Es manipulación y no lo sabes: Desactiva las trampas emocionales en todos los ámbitos de tu vida', rating: 4.62 },
        { name: 'Ser feliz es fácil: El método más simple para disfrutar de la vida', rating: 4.59 },
        { name: 'Educar hijos felices en un mundo de locos: 7 hábitos para conseguirlo', rating: 4.56 },
        { name: 'El pequeño libro coreano de la felicidad: Alegría, resiliencia y el arte de dar', rating: 4.47 },
        { name: 'Qué hacer cuando todo cambia: Esquiva la irrelevancia y aprovecha la era de la IA generativa', rating: 4.47 },
        { name: 'Tu miedo es tu poder: Afronta tus miedos y transforma tu vida', rating: 4.44 }
      ];

      const sortedTitles = [...titles].sort((a, b) => b.rating - a.rating);

      const ctx = document.getElementById('ratingsChart_es_hispanic').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: sortedTitles.map(t => {
            const words = t.name.split(':')[0].split(' ');
            return words.slice(0, 5).join(' ') + (words.length > 5 ? '...' : '');
          }),
          datasets: [{
            label: 'Rating',
            data: sortedTitles.map(t => t.rating),
            backgroundColor: sortedTitles.map(t => {
              if (t.rating >= 4.7) return '#ffd43b';
              if (t.rating >= 4.6) return '#74c0fc';
              return '#b197fc';
            }),
            borderRadius: 8,
            borderSkipped: false,
          }]
        },
        options: {
          indexAxis: 'y',
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: '#1a1a2e',
              padding: 12,
              titleColor: '#fff',
              bodyColor: '#fff',
              borderColor: '#764ba2',
              borderWidth: 2,
              callbacks: {
                label: function(context) {
                  return 'Rating: ' + context.parsed.x.toFixed(2) + ' ⭐';
                }
              }
            }
          },
          scales: {
            x: {
              beginAtZero: false, min: 4.3, max: 4.8,
              ticks: { color: '#fff', callback: v => Number(v).toFixed(1) },
              grid: { color: 'rgba(255, 255, 255, 0.1)' }
            },
            y: {
              ticks: { color: '#fff', font: { size: 11 } },
              grid: { display: false }
            }
          }
        }
      });

      const titlesGrid = document.getElementById('titlesGrid_es_hispanic');
      sortedTitles.forEach(title => {
        const card = document.createElement('div');
        card.className = 'title-card';
        card.innerHTML = `
          <div class="title-name">${title.name}</div>
          <div class="title-rating">
            <span class="rating-badge">⭐ ${title.rating.toFixed(2)}</span>
          </div>
        `;
        titlesGrid.appendChild(card);
      });
    })();
  </script>
